<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.registerform">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RegisterForm">
        <activity android:name=".ui.java.SuccessActivity" />
        <activity android:name=".ui.kotlin.SuccessActivityKt" />
        <activity android:name=".ui.MainActivityKt">
            <!-- Si estás haciendo kotlin mueve el intent filter aqui -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.java.MainActivity">
            <!-- Si estás haciendo java deja el intent filter aqui -->

        </activity>
    </application>

</manifest>